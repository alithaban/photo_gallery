{% extends 'admin.html.twig' %}
{% block title %} - {{ title }} {% endblock %}
{% block stylesheets %}
    <link href="{{ asset('vendor/css/jquery.dataTables.min.css') }}" rel='stylesheet'>
    <link href="{{ asset('vendor/css/dataTables.bootstrap.min.css') }}" rel='stylesheet'>
    <link href="{{ asset('vendor/css/responsive.dataTables.min.css') }}" rel='stylesheet'>
    <link href="{{ asset('vendor/css/bootstrap-msg.min.css') }}" rel='stylesheet'>
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('vendor/js/jquery.dataTables.min.js') }}"></script>
    <script src="{{ asset('vendor/js/dataTables.responsive.min.js') }}"></script>
    <script src="{{ asset('vendor/js/bootstrap-msg.min.js') }}"></script>
    <script src="{{ asset('js/categories/categories.js') }}"></script>
{% endblock %}

{% block body %}
    <form class="navbar-form navbar-left">
        <div class="form-group">
            <input type="text" class="form-control" placeholder="New Category" id="category-name">
        </div>
        <button id="add-category" type="button" class="btn btn-default">Save</button>
    </form>
    <table id="categories-list" class="table table-striped table-bordered" width="100%" cellspacing="0">
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Created At</th>
                <th>Updated At</th>
                <th>Edit</th>
            </tr>
        </thead>
    </table>

    <!-- Start Edit Modal -->
    <div class="modal fade" id="update-category-modal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title" id="exampleModalLabel">Update Category Name</h4>
                </div>
                <div class="modal-body">
                    <form>
                        <div class="form-group">
                            <label for="recipient-name" class="control-label">Category Name:</label>
                            <input type="text" class="form-control" id="category-updated-name">
                        </div>
                        <input type="hidden" name="category-id" id="category-id">
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    <button type="button" id="update-category" class="btn btn-primary">Update</button>
                </div>
            </div>
        </div>
    </div>
    <!-- End Edit Modal -->

    <!-- Start Delete Modal -->
    <div class="modal fade" id="confirmDelete" role="dialog" aria-labelledby="confirmDeleteLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h4 class="modal-title">Delete Parmanently</h4>
                </div>
                <div class="modal-body">
                    <p>Are you sure you want to delete the category?</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-danger" data-category-id="" id="confirm-delete-category">Delete</button>
                </div>
            </div>
        </div>
    </div>

    <!-- End Delete Modal -->
{% endblock %}